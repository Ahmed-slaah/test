@model DemoProject.Core.DTOs.GetVacanciesListDTO

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">OpenedTo</th>
                <td colspan="3"></td>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td colspan="4">
                    @if (Model.count == 0)
                    {
                        <h3> There is no Deleted requests for now...</h3>
                    }
                </td>
            </tr>
            @foreach (var item in Model.VacanciesList)
            {
                <tr>
                    <td scope="row">@item.Name</td>
                    <td scope="row">@item.Descriptions</td>
                    <td scope="row">@item.OpenedTo</td>
                    <td colspan="3">
                        @if (Model.roleId != null)
                        {
                            <a href="@Url.Action("Delete","Home",new { Id=item.Id})" class="btn btn-sm btn-danger">Approve</a>                           
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
